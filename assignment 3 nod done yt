#Main menu
def Main_Menu():
    while True:
        global total
        print("\nMain Menu:")
        print("1. Start a new order")
        print("2. Close the program")
        choice = input("Enter your choice: ")
        if choice == "1": 
            print("new order")
            new_order_menu()
        elif choice == "2":
            print("bye bye")
        else:
            print("invalid choice . Please try again")
